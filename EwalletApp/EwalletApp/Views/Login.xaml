<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:control="clr-namespace:EwalletApp.Control"
             xmlns:bd="clr-namespace:EwalletApp.ViewModels"
             NavigationPage.HasNavigationBar="False"
             x:Class="EwalletApp.Views.Login">
    <ContentPage.BindingContext>
        <bd:LoginVM/>
    </ContentPage.BindingContext>
    <ContentPage.Content>       
            <Grid>
                <Image Source="splash" Grid.Column="0"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Aspect="AspectFill" />
            <StackLayout Grid.Column="0" 
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand">
                <StackLayout 
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <Image Source="wallet"
                           HeightRequest="80"
                           WidthRequest="80"
                           Margin="0,0,0,35"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding StatusEmailVerdify}"
                           Margin="50,0,50,0"
                           TextColor="Red"/>
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="Red"
                           Margin="50,0,0,0"/>
                    <control:RoundedEntry 
                        Placeholder="UserName"
                        HeightRequest="55"
                        Text="{Binding Email}"
                           WidthRequest="300"
                           Margin="50,5,50,8" />
                  
                    <Label Text="{Binding PassMeter}" 
                           TextColor="Red"
                           Margin="50,5,0,0"/>
                    <control:RoundedEntry 
                        Placeholder="Password"
                        HeightRequest="55"
                        Text="{Binding Password}"
                           WidthRequest="300"
                           Margin="50,0,50,20" />
                    

                    <Grid>

                        <Button Text="SIGN IN"  Grid.Column="0"
                            CornerRadius="10"
                            TextColor="White"
                            Command="{Binding OnClickSingInCommand}"
                            IsEnabled="{Binding ActiveButton}"
                            BackgroundColor="#eaa200"
                            Margin="50,5,50,0"/>
                        <ActivityIndicator Color="White" 
                                           Grid.Column="0"
                                           IsRunning="True" 
                                           IsVisible="{Binding Indicator}"/>
                        
                    </Grid>
                   

                </StackLayout>
                
            </StackLayout>
                
            </Grid>      
     
    </ContentPage.Content>
</ContentPage>